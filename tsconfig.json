{
    "include": ["./ts-src/**/*"],
      "exclude": [
        "node_modules"
      ],
    "parser": "@typescript-eslint/parser",
    "compilerOptions": {
      "outDir": "./build/",
      "module": "commonjs",
      "target": "es2017",
      "allowJs": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "sourceMap": false,
      "resolveJsonModule": true,
      "plugins": [
        {
          "name": "tslint-language-service"
        }
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
  }